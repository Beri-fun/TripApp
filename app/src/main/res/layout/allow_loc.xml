<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    tools:context=".Allow_loc">


    <TextView
        android:id="@+id/name_trip_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/big_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="214dp"
        android:layout_height="207dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/switchButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61"
        app:srcCompat="@drawable/map_big"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/switchButton"
        android:layout_width="233dp"
        android:layout_height="91dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/button_border"
        android:fontFamily="sans-serif"
        android:padding="10sp"
        android:text="@string/switch_location"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_trip_app"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/continue_after_loc"
        android:layout_width="126dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_selector"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/btn_continue"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:theme="@android:style/ThemeOverlay.Material.Dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchButton" />



</androidx.constraintlayout.widget.ConstraintLayout>

